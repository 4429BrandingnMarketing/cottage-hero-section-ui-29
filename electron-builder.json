{
  "appId": "com.redvisionmusic.admin",
  "productName": "Red Vision Music Admin",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "mac": {
    "category": "public.app-category.music",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon.png",
    "darkModeSupport": true
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "title": "Red Vision Music Admin"
  },
  "win": {
    "target": ["nsis"],
    "icon": "public/icon.png"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Audio"
  }
}
